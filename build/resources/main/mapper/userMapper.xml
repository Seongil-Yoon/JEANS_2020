<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jeans.ko.Dao.IUserDao">
    <insert id="insertUser">
        insert into user values(#{role},#{userid},#{nickname},#{password},#{sex},#{height},#{weight},#{picture},#{email})
    </insert>
    <select id="userLogin" resultType="String">
        select password from user where userid= (#{userid});
    </select>
    <select id="getNickname" resultType="String">
        select nickname from user where userid=(#{id});
    </select>
    <select id="getPicture" resultType="String">
        select picture from user where userid=(#{userid});
    </select>
    <select id="getInformation" resultType="jeans.ko.Dto.UserDto">
        select * from user where userid=(#{userid}) and password=(#{password});
    </select>

    <!--아이디와 비밀번호를 받아서 아이디의 비밀번호를 변경-->
    <update id="changePassword">
        UPDATE user
        SET password=#{ps}
        where userid=#{id}
    </update>

    <!--사용자의 프로필 썸네일 변경. 아이디와 픽쳐의 이름을 받아서 변경 -->
    <update id="changeprofileThumbnail">
        UPDATE user
        SET picture=#{picture}
        where userid=#{id}
    </update>
</mapper>

