<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jeans.ko.Dao.IPretreatmentDao">
    <insert id="insertUser">
        insert into pretreatment(userid) values(#{userid});
    </insert>

    <update id=" countPretreatment">
        update pretreatment set <foreach collection="list" item="i" separator=",">(${i.mood}=${i.mood}+1)</foreach> where userid=#{userid}
    </update>
    
    <update id="upMinimal">
        update pretreatment set minimal=minimal+1 where userid=#{userid}
    </update>
</mapper>