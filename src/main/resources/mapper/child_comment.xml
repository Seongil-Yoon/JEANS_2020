<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jeans.ko.Dao.IChildCommentDao">

    <insert id="insert" >
        insert into comment
        values
        (
        #{child_comment_num},#{fk_comment_id},#{child_comment_content}
        ,#{child_comment_id},#{child_comment_nickname},CURDATE()
        )
        <selectKey resultType="java.lang.Integer" keyProperty="child_comment_num" order="AFTER">
            <!--return 값은 dto 객체로 넘어간다 get메소드로 값을 갖고와야됨 -->
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>
    <!--전체 대댓글 가져 오기-->
    <select id="list" resultType="jeans.ko.Dto.ChildCommentDto">
        select * from child_comment where fk_comment_id = #{comment_id} order by child_comment_num desc;
    </select>
    <!--대댓글 하나 가져오기-->
    <select id="comment" resultType="jeans.ko.Dto.CommentDto">
        select * from child_comment where child_comment_num = #{child_comment_num};
    </select>


</mapper>